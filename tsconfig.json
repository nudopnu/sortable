{
	"compilerOptions": {
		"strict": true,
		"noImplicitAny": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"target": "ES2022",
		"moduleResolution": "Node",
		"module": "CommonJS",
		"declaration": true,
		"isolatedModules": true,
		"noEmit": true,
		"outDir": "./dist",
		"types": [
			"jest",
		]
	},
	"include": ["./src", "./test"],
	"exclude": ["./node_modules"],
}